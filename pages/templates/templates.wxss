/**templates.wxss**/
.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: #f8f9fa;
}

/* 搜索栏 */
.search-bar {
  padding: 20rpx 30rpx;
  background: white;
  border-bottom: 1rpx solid #e9ecef;
}

.search-input-wrapper {
  position: relative;
  background: #f8f9fa;
  border-radius: 25rpx;
  padding: 0 50rpx 0 30rpx;
}

.search-input {
  height: 70rpx;
  line-height: 70rpx;
  font-size: 28rpx;
  color: #333;
}

.search-icon {
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 28rpx;
  color: #999;
}

/* 分类标签 */
.category-tabs {
  background: white;
  border-bottom: 1rpx solid #e9ecef;
  white-space: nowrap;
  padding: 20rpx 0;
}

.tab-item {
  display: inline-block;
  margin: 0 15rpx;
  padding: 15rpx 30rpx;
  border-radius: 25rpx;
  background: #f8f9fa;
  transition: all 0.3s;
}

.tab-item.active {
  background: #007aff;
  color: white;
}

.tab-text {
  font-size: 26rpx;
  color: inherit;
}

/* 模板网格 */
.template-grid {
  flex: 1;
  padding: 20rpx;
}

.grid-container {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.template-card {
  width: 48%;
  background: white;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  transition: transform 0.2s, box-shadow 0.2s;
}

.template-card:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

/* 模板预览 */
.template-preview {
  position: relative;
  height: 240rpx;
  background: #f8f9fa;
  overflow: hidden;
}

.preview-container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-wrap: wrap;
  padding: 10rpx;
  box-sizing: border-box;
}

.preview-container.large {
  height: 400rpx;
  padding: 20rpx;
}

.preview-cell {
  border-radius: 6rpx;
  overflow: hidden;
  position: relative;
}

.cell-placeholder {
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  opacity: 0.8;
}

.selected-mark {
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  width: 40rpx;
  height: 40rpx;
  background: #007aff;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.check-icon {
  color: white;
  font-size: 24rpx;
  font-weight: bold;
}

/* 模板信息 */
.template-info {
  padding: 20rpx;
}

.template-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}

.template-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.photo-count {
  font-size: 24rpx;
  color: #666;
}

.template-tag {
  font-size: 20rpx;
  color: #007aff;
  background: rgba(0, 122, 255, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
}

/* 加载更多 */
.load-more {
  text-align: center;
  padding: 40rpx 0;
}

.load-text {
  font-size: 26rpx;
  color: #999;
}

/* 底部操作栏 */
.bottom-actions {
  display: flex;
  padding: 20rpx 30rpx;
  background: white;
  border-top: 1rpx solid #e9ecef;
  gap: 20rpx;
}

.action-btn {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 40rpx;
  font-size: 28rpx;
  border: none;
}

.action-btn.primary {
  background: #007aff;
  color: white;
}

.action-btn.primary[disabled] {
  background: #ccc;
}

.action-btn.secondary {
  background: #f8f9fa;
  color: #007aff;
  border: 1rpx solid #007aff;
}

/* 预览模态框 */
.preview-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s;
}

.preview-modal.show {
  opacity: 1;
  visibility: visible;
}

.modal-content {
  background: white;
  border-radius: 20rpx;
  width: 90%;
  max-height: 80vh;
  overflow: hidden;
  transform: scale(0.8);
  transition: transform 0.3s;
}

.preview-modal.show .modal-content {
  transform: scale(1);
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #e9ecef;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.close-btn {
  font-size: 40rpx;
  color: #999;
  width: 40rpx;
  height: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

/* 预览详情 */
.preview-detail {
  padding: 30rpx;
  max-height: 60vh;
  overflow-y: auto;
}

.large-preview {
  text-align: center;
  margin-bottom: 30rpx;
}

.template-details {
  text-align: left;
}

.detail-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 15rpx;
}

.detail-desc {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
  display: block;
  margin-bottom: 25rpx;
}

.detail-specs {
  border-top: 1rpx solid #e9ecef;
  padding-top: 20rpx;
}

.spec-item {
  display: flex;
  justify-content: space-between;
  margin-bottom: 15rpx;
}

.spec-label {
  font-size: 26rpx;
  color: #666;
}

.spec-value {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
}

/* 模态框操作 */
.modal-actions {
  display: flex;
  padding: 30rpx;
  border-top: 1rpx solid #e9ecef;
  gap: 20rpx;
}

.modal-btn {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 40rpx;
  font-size: 28rpx;
  border: none;
}

.modal-btn.primary {
  background: #007aff;
  color: white;
}

.modal-btn.secondary {
  background: #f8f9fa;
  color: #666;
}